<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>Edit Event</h1>
    <%= form_for([@client, @event]) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.text_field :date, placeholder: Time.now.strftime("%B %d, %Y"), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :start_time %>
        <%= f.text_field :start_time, placeholder: Time.now.strftime("%H:%M%P"), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :end_time %>
        <%= f.text_field :end_time, placeholder: (Time.now+1.hour).strftime("%H:%M%P"), class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :discount %>
        <%= f.text_field :discount, placeholder: '50%', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_area :details, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :main, "Upload Image" %>
        <%= f.file_field :main, class: "form-control" %>
      </div>

      <%= f.submit "Submit Changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
