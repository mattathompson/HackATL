<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>New Event</h1>
    <%= form_for([@client, @event], :html => { :multipart => true }) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :start_time %>
        <%= f.time_select :start_time, class: "form-control", :default => Time.now %>
      </div>
      <div class="form-group">
        <%= f.label :end_time %>
        <%= f.time_select :end_time, class: "form-control", :default => (Time.now + 30.minutes) %>
      </div>
      <div class="form-group">
        <%= f.label :discount %>
        <%= f.text_field :discount, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_area :details, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :main, "Upload Image" %>
        <%= f.file_field :main, class: "form-control" %>
      </div>
      <%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
