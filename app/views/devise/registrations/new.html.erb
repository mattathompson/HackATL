<div class="row">
  <div class="signin_box col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2" style="margin-top: 0; margin-bottom: 20px;">

    <h1 style="signin_lead">You're about to get some sweet deals.</h1>
    <h1 style="color: #1ea1da; font-weight: 900; padding-bottom: 26px;">Nice.</h1>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <% if @class_name == "User" %>
      <div class="form-group">
        <%= f.label :first_name, "First Name" %><br />
        <%= f.email_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, "Last Name" %><br />
        <%= f.email_field :last_name, class: "form-control" %>
      </div>
      <% end %>

      <div class="form-group">
        <%= f.label :address, "Address" %><br />
        <%= f.email_field :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :city, "City" %><br />
        <%= f.email_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :state, "State" %><br />
        <%= f.email_field :state, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :zip, "Zip" %><br />
        <%= f.email_field :zip, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
